<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
<link rel="icon" href="/favicon.ico" type="image/x-icon">
<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="../stylesheets/style.css" />
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
<body>

<!-- #home -->
<div data-role="page" id="home" data-theme="a" onload="window.location.href = 'https://google.com'">
	<div role="main" class="ui-content">
    <div class="container">
      <div class="content-box-container">
        <div class="header">
          <img src="../images/banner.jpg">

          <div class="title">
            <p><%= teamOneData.teamName %><br><%= teamTwoData.teamName %></p>
          </div>
        </div>

        <div class="content">
          <div class="first-content-box" style="text-align: center;">
            <p style="margin-bottom: 0;"><strong>Start Time: <%= time %></strong></p>

            <div style="clear: both;"></div>
            <hr>
            <div class="half-card">
              <p style="margin-bottom: 0;"><%= teamOneData.teamName %></p>
            </div>
            <div class="half-card">
              <p style="margin-bottom: 0;"><%= teamTwoData.teamName %></p>
            </div>
            <div style="clear: both;"></div>
            <hr>
            <div class="half-card">
              <p style="margin-bottom: 0;">0</p>
            </div>
            <div class="half-card">
              <p style="margin-bottom: 0;">0</p>
            </div>
            <div style="clear: both;"></div>

            <form id="halftime" data-ajax="false" method="post" action="/halfTime/<%= matchid %>">
              <input id="submit" type="submit" value="Half time">
            </form>
            <form id="fulltime" data-ajax="false" method="post" action="/fullTime/<%= matchid %>">
              <input id="submit" type="submit" value="Full time">
            </form>
          </div>

          <div class="content-box" style="text-align: center;">
            <p style="margin-bottom: 0;"><strong><%= teamOneData.teamName %></strong></p>
            <a href="/referee/<%= matchid %>/yellow-card/<%= teamOneData.id %>"><input id="submit" type="submit" value="Yellow card"></a>
            <a href="/referee/<%= matchid %>/red-card/<%= teamOneData.id %>"><input id="submit" type="submit" value="Red card"></a>
            <a href="/referee/<%= matchid %>/goal/<%= teamOneData.id %>"><input id="submit" type="submit" value="Goal"></a>
          </div>

          <div class="content-box" style="text-align: center;">
            <p style="margin-bottom: 0;"><strong><%= teamTwoData.teamName %></strong></p>
            <a href="/referee/<%= matchid %>/yellow-card/<%= teamTwoData.id %>"><input id="submit" type="submit" value="Yellow card"></a>
            <a href="/referee/<%= matchid %>/red-card/<%= teamTwoData.id %>"><input id="submit" type="submit" value="Red card"></a>
            <a href="/referee/<%= matchid %>/goal/<%= teamTwoData.id %>"><input id="submit" type="submit" value="Goal"></a>
          </div>

          <div class="content-box" style="text-align: center;">
            <p style="margin-bottom: 0;"><strong>Match Summary</strong></p>
            <% updates.forEach(function(update){ %>
              <hr>
              <div style="text-align: left;" class="half-card">
                <p style="margin-bottom: 0;"><%= update.event %>
                  <%if (update.teamid == teamOneData.id) { %> - <%= teamOneData.teamName %><% } %>
                  <%if (update.teamid == teamTwoData.id) { %> - <%= teamTwoData.teamName %><% } %>

                </p>
              </div>
              <div style="text-align: right;" class="half-card">
                <p style="margin-bottom: 0; color: #70af11;"><%= update.minutes %></p>
              </div>
              <div style="clear: both;"></div>
            <% })%>


          </div>

          <div class="logout-box">
            <a href="/logout"><input id="submit" type="submit" value="Logout"></a>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>

<script src="../javascripts/createTeam.js"></script>

</body>
</html>
