          <div class="title">
            <p>START<br>MATCH</p>
          </div>
        </div>

        <div class="content">
          <div class="first-content-box" style="text-align: center;">
            <br><br><br>
          </div>

          <div class="logout-box">
            <a href="/logout"><input id="submit" type="submit" value="Logout"></a>
          </div>
        </div>
      </div>
    </div>
	</div>
</div>


<script src="javascripts/createTeam.js"></script>

